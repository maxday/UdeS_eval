<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Se connecter</h2>
  <%= f.text_field :username, :autofocus => true, :class=>"input-block-level", :placeholder => "Cip" %>
  <%= f.password_field :password, :class=>"input-block-level", :placeholder => "Mot de passe"%>
  <%= f.submit "Se connecter", :class=>"btn btn-large btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
