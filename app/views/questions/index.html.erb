<% @questions.each do |question| %>
  <tr>
    <td><%= question.name %></td>
    <td><%= Category.find(question.category_id).name %></td>
    <td><%= Period.find(question.period_id).fullname %></td>
    <td><%= link_to 'Editer', edit_question_path(question), :class => "btn btn-info" %></td>
    <td><%= link_to 'Supprimer', question, method: :delete, data: { confirm: 'Etes-vous sur ?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>
