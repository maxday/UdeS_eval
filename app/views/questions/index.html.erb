<h1>Liste des questions</h1>

<div class="btn-toolbar">
  <%= link_to 'Nouvelle question', new_question_path, :class => "btn btn-primary" %>
  <%= link_to 'Retour', home_path, :class => "btn btn-inverse" %>
</div>

<table class="table table-striped">
  <tr>
    <th>Nom</th>
    <th>Cat√©gorie</th>
    <th>Periode</th>
    <th></th>
