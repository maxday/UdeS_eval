<h1>Liste des questions</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Catégorie</th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.name %></td>
    <td><%= Category.find(question.category_id).name %></td>
    <td><%= link_to 'Editer', edit_question_path(question) %></td>
    <td><%= link_to 'Supprimer', question, confirm: 'Etes-vous sûr ?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nouvelle question', new_question_path %>
