<%= simple_form_for(@entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :period, :label_method => :fullname, :include_blank => false %>
    <%= f.input :visible_value %>
    <%= f.input :real_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
