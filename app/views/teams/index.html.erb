<h1>Liste des équipes</h1>

<table>
  <tr>
    <th>Nom</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= link_to 'Voir', team %></td>
    <td><%= link_to 'Editer', edit_team_path(team) %></td>
    <td><%= link_to 'Supprimer', team, confirm: 'Êtes-vous sûr ?', method: :delete %></td>
  </tr>
<% end %>
</table>

