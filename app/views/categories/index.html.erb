<h1>Liste des  categories</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Nombre de questions</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.questions.count %></td>
    <td><%= link_to 'Editer', edit_category_path(category) %></td>
    <td><%= link_to 'Supprimer', category, confirm: 'Etes-vous sûr ?', method: :delete %></td>
  </tr>
<% end %>
</table>

